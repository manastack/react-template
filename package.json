{
  "name": "react-template",
  "version": "0.0.0",
  "engines": {
    "node": "20",
    "pnpm": "8"
  },
  "scripts": {
    "presetup": "./scripts/nvm-use.sh",
    "setup": "pnpm i && pnpm audit",
    "dev": "vite --port 3555",
    "lint:styles": "stylelint --fix 'src/**/**.{css,style.js,style.ts}'",
    "lint:scripts": "eslint --fix 'src/**/**.{ts,tsx}'",
    "format": "pnpm lint:styles && pnpm lint:scripts && scripts/postformat.sh",
    "test": "vitest --mode=test --passWithNoTests",
    "test:ui": "vitest --mode=test --passWithNoTests --ui",
    "test:ci": "vitest --mode=test --passWithNoTests --run",
    "test:coverage": "vitest --coverage --mode=test --passWithNoTests --run",
    "build:dev": "tsc && vite build --mode=dev",
    "build:stage": "tsc && vite build --mode=dev",
    "build:main": "tsc && vite build",
    "preview": "vite preview"
  },
  "dependencies": {
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@hookform/resolvers": "^3.3.1",
    "@manauser/react-emotion-naming": "^1.0.11",
    "@manauser/react-env": "^1.0.2",
    "@manauser/react-render-log": "^1.1.5",
    "@tanstack/react-query": "^4.33.0",
    "@tanstack/react-query-devtools": "^4.33.0",
    "axios": "^1.4.0",
    "axios-mock-adapter": "^1.21.5",
    "compose-function": "^3.0.3",
    "notistack": "^3.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.46.2",
    "tailwindcss": "^3.3.3",
    "twin.macro": "^3.4.0",
    "zod": "^3.22.3"
  },
  "devDependencies": {
    "@babel/core": "^7.22.9",
    "@babel/plugin-transform-react-jsx": "^7.19.0",
    "@emotion/babel-plugin-jsx-pragmatic": "^0.2.0",
    "@stylelint/postcss-css-in-js": "^0.38.0",
    "@testing-library/jest-dom": "^6.1.3",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/babel__core": "^7.20.1",
    "@types/compose-function": "^0.0.30",
    "@types/node": "^20.4.2",
    "@types/react": "^18.2.14",
    "@types/react-dom": "^18.2.7",
    "@types/testing-library__jest-dom": "^5.14.8",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitest/coverage-v8": "^0.33.0",
    "@vitejs/plugin-react": "^4.0.3",
    "@vitest/ui": "^0.33.0",
    "autoprefixer": "^10.4.12",
    "babel-plugin-macros": "^3.1.0",
    "eslint": "^8.44.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-hooks": "^0.4.3",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-prettier": "4",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-sort-keys-fix": "^1.1.2",
    "jsdom": "^22.1.0",
    "postcss": "^8.4.31",
    "postcss-syntax": "^0.36.2",
    "prettier": ">=2.2.0 <2.3",
    "prettier-plugin-tailwindcss": "^0.3.0",
    "stylelint": "^15.10.1",
    "stylelint-a11y": "^1.2.3",
    "stylelint-config-recommended": "^13.0.0",
    "stylelint-order": "^6.0.3",
    "stylelint-order-config-standard": "^0.1.3",
    "typescript": "^5.1.6",
    "vite": "^4.4.3",
    "vite-tsconfig-paths": "^4.2.0",
    "vitest": "^0.33.0"
  },
  "babelMacros": {
    "twin": {
      "preset": "emotion"
    }
  }
}
